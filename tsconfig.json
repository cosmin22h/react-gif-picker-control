{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["DOM", "ES2020"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "stories"]
}
